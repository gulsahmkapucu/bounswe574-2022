container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python gamesiplayed/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python gamesiplayed/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python gamesiplayed/manage.py collectstatic --noinput"

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: gamesiplayed.wsgi:application
